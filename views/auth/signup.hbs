<div class="signup-form-container">

    <div class="signup-boxes-firstpage">

        <img src="/images/colored-tinder-logo.png" alt="logo">

        <form action="/signup" method="POST" enctype="multipart/form-data">



            <section class="signup-step1">


                <div class="signup-username">
                    <label for="username">Username</label>
                    <input placeholder="Username" type="text" name="username" minlength="3" maxlength="15" required>
                </div>

                <div class="signup-password">
                    <label for="password">Password</label>
                    <input placeholder="Password" type="password" name="password" required>
                </div>

                <div class="signup-age">
                    <label for="age">Age</label>
                    <input placeholder="Age" type="number" name="age" required>
                </div>

                <div class="signup-button">
                    <a href="/" class="btn rounded-button">&#8629;</a>
                    <button class="signup-step1-button" onclick="showOrHideDiv()">Step 1</button>
                </div>
    </div>



    </section>



    <section class="signup-step2 hidden">

        <div class="signup-name">
            <label class="signup-label-name" for="name">Name</label>
            <input placeholder="Name" type="text" name="name" minlength="3" maxlength="10" required>
        </div>


        <fieldset class="signup-fieldset">
            <legend class="signup-interests-name">Interests:</legend>
            <select class="signup-interests-box" name="interests" multiple>
                <option value="Food">Food</option>
                <option value="Music">Music</option>
                <option value="Coding">Coding</option>
                <option value="Dance">Dance</option>
            </select>
        </fieldset>


        <div class="signup-aboutme">
            <label class="signup-label-aboutme" for="aboutMe">About me</label>
            <input placeholder="About me" type="text" name="aboutMe" minlength="3" maxlength="250" required>
        </div>

        <label class="campus-text" for="campus">Campus</label>
        <select name="campus" required>
            <option selected="selected" value="3">Select an option</option>
            <option value="Barcelona">Barcelona</option>
            <option value="Amsterdam">Amsterdam</option>
            <option value="Madrid">Madrid</option>
            <option value="Miami">Miami</option>
            <option value="Berlin">Berlin</option>
            <option value="Paris">Paris</option>
        </select>

        <button class="signup-step2-button" onclick="showOrHideDiv2()">Step 2</button>


    </section>


    <section class="signup-step3 hidden">

        <label for="profileImg" class="btn btn-primary add-plus"> Add profile photo <img style="width: 30px;" src="/images/plus.ico" alt="plus-icon" class="test">

        </label>
        <input class="signup-choosefile" type="file" id="profileImg" name="profileImg" required>

        <button class="signup-step3-submit" type="submit">Submit</button>

    </section>

    </form>

</div>

<script>
    function showOrHideDiv() {
        let step1 = document.querySelector(".signup-step1")
        let step2 = document.querySelector(".signup-step2")

        step1.classList.toggle("hidden")
        step2.classList.toggle("hidden")
    }
</script>

<script>
    function showOrHideDiv2() {
        let step2 = document.querySelector(".signup-step2")
        let step3 = document.querySelector(".signup-step3")

        step2.classList.toggle("hidden")
        step3.classList.toggle("hidden")
    }
</script>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}