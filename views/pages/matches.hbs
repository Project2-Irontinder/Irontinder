<div class="matches-view">
  <header class="app-logo-container">
    <img class="app-logo" src="/images/gradient.png" alt="">
    <hr class="logo-underline">
  </header>
  <h1 class="title">Matches:</h1>
  <section class="matches-section">
      {{#each user.matches}}
          {{#if (equals firstUser._id ../user._id) }}
          <div class="match-div">
              <a href="/profile/{{firstUser._id}}"><img src="{{firstUser.profileImg}}" class="matches-img" alt="{{firstUser.name}}"></a>
              <h2>{{firstUser.name}}, {{firstUser.age}}</h2>
          </div>
          <br>
          {{/if}}

          {{#if (equals secondUser._id ../user._id) }}
          <div class="match-div">
              <a href="/profile/{{secondUser._id}}"><img src="{{secondUser.profileImg}}" class="matches-img" alt="{{secondUser.name}}"></a> 
              <h2>{{secondUser.name}}, {{secondUser.age}}</h2>
          </div>
          <br>
          {{/if}}
      {{/each}}
  </section>


  <nav class="navbar fixed-bottom spacing">
    <ul class="navbar-list">
      <li>
        <a class="navbar-btn" href="/swipe/show/{{user._id}}"> <img src="/images/grey-tinder-logo.ico" alt="swipe icon"> </a>
      </li>
      <li>
        <a class="navbar-btn" href="/profile/{{user._id}} "> <img src="/images/grey-profile-logo.ico" alt="profile icon"> </a>
      </li>
      <li>
        <a class="navbar-btn" href="/matches/{{user._id}}"> <img src="/images/colored-matches-logo.png" alt="matches icon"> </a>
      </li>
    </ul>
  </nav>
</div>